MDBoxLayout:
    orientation: "vertical"

    MDTabs:
        id:TopTabs
        Tab:
            title: "Monitor"
            icon: "monitor"

            MDTabs:
                id:MonitorTabs
                Tab:
                    title:"Pressure"
                    icon:"speedometer"
                    MDBoxLayout:
                        orientation:'horizontal'
                        icon:"speedometer"
                        title:"Pressure"

                        MDBoxLayout:
                            size_hint:(0.3,1)
                            orientation:"vertical"

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-1-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 1'

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-2-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 2'

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-3-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 3'

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-4-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 4'

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-5-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 5'

                            MDBoxLayout:
                                orientation:'horizontal'

                                MDIconButton:
                                    icon:"numeric-6-box"
                                    pos_hint:{"center_x":0.5,"center_y":0.5}
                                MDLabel:
                                    text:'Pressure 6'

                        PressureGraph:
                            size_hint:(0.7,1)
                            id:PressureGraph

                Tab:
                    icon:"approximately-equal"
                    title:"Flow"

                    FlowGraph:
                        id:FlowGraph

                Tab:
                    icon:"thermometer"
                    title:"Temperature"

                    TemperatureGraph:
                        id:TemperatureGraph
        Tab:
            icon: "graph"
            title: "Measure"

            MDTabs:
                id:MeasurementTabs
                on_tab_switch: app.on_measurement_tab_switch(*args)
                on_ref_press: app.on_measurement_ref_press(*args)

                Tab:
                    icon:"plus"
                    MDLabel:
                        halign:"center"
                        valign:"center"
                        text:"Press + to start a new measurement"
                        font_style:"H4"

        Tab:
            icon: "file-settings"
            title: "Settings"

            MDTabs:
                id:SettingsTabs
                Tab:
                    icon:"bell-alert"
                    title:"Alerts"
                    MDBoxLayout:
                        halign:'center'
                        orientation:"horizontal"
                        MDBoxLayout:
                            orientation:'vertical'
                            MDBoxLayout:
                                orientation:'horizontal'
                                MDCheckbox:
                                    width: dp(55)
                                MDLabel:
                                    text:"Alarm Text"
                                MDTextField:
                                    size_hint_x:None
                                    width:"65dp"
                                    pos_hint:{"center_x":0,"center_y":0.5}
                                    helper_text:"Parameter"
                                    helper_text_mode: "persistent"
                            MDBoxLayout:
                                orientation:'horizontal'
                                MDCheckbox:
                                    width: dp(55)
                                MDLabel:
                                    text:"Alarm Text"
                                MDTextField:
                                    size_hint_x:None
                                    width:"65dp"
                                    pos_hint:{"center_x":0,"center_y":0.5}
                                    helper_text:"Parameter"
                                    helper_text_mode: "persistent"
                                MDTextField:
                                    size_hint_x:None
                                    width:"65dp"
                                    pos_hint:{"center_x":0,"center_y":0.5}
                                    helper_text:"Parameter"
                                    helper_text_mode: "persistent"
                            MDBoxLayout:
                                orientation:'horizontal'
                                MDCheckbox:
                                    width: dp(55)
                                MDLabel:
                                    text:"Alarm Text"
                                MDTextField:
                                    size_hint_x:None
                                    width:"65dp"
                                    pos_hint:{"center_x":0,"center_y":0.5}
                                    helper_text:"Parameter"
                                    helper_text_mode: "persistent"
                            MDBoxLayout:
                                orientation:'horizontal'
                                MDCheckbox:
                                    width: dp(55)
                                MDLabel:
                                    text:"Alarm Text"
                                MDTextField:
                                    size_hint_x:None
                                    width:"65dp"
                                    pos_hint:{"center_x":0,"center_y":0.5}
                                    helper_text:"Parameter"
                                    helper_text_mode: "persistent"
                        MDLabel:
                            halign:'center'
                            text:"stuff on the right side"


                Tab:
                    icon:"lan-connect"
                    title:"Connections"
                Tab:
                    icon:"ruler"
                    title:"Measurement Devices"

<MeasurementTab>
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            orientation:'horizontal'
            pos_hint:{'center_x':0.5,'center_y':0.5}
            size_hint:(0.9,0.1)
            MDTextFieldRound:
                id:textbox
                pos_hint:{'center_y':0.5}
                hint_text:"Enter Name of Python Script"
                font_size:"22sp"
            MDLabel:
                id:blanklabel
                text:" "
            MDSwitch:
                id:switch
                pos_hint:{'center_x':1,'center_y':0.5}
                font_style:'H5'
                font_size:"1200"
                on_release: app.on_measurement_button_press()


        PressureGraph
            size_hint:(0.975,0.9)
